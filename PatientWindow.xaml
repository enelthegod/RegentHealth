<Window x:Class="RegentHealth.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegentHealth - Appointments"
        Height="450"
        Width="700">

    <Grid Margin="10">

        <StackPanel>

            <TextBlock Text="My Appointments"
                       FontSize="22"
                       Margin="0,0,0,10"/>

            <StackPanel Margin="10">

                <TextBlock Text="Doctor Id:"/>
                <TextBox x:Name="DoctorIdTextBox" Width="150"/>

                <TextBlock Text="Select Date:" Margin="0,10,0,0"/>
                <DatePicker x:Name="AppointmentDatePicker"/>

                <Button Content="Create Appointment"
            Click="CreateAppointment_Click"
            Margin="0,10,0,10"
            Width="180"/>
            </StackPanel>

            <ListBox x:Name="AppointmentsListBox"
                     Height="173" Width="616"/>
            
            <Button Content="Refresh"
                    Width="120"
                    Margin="0,10,0,0"
                    Click="Refresh_Click"/>

        </StackPanel>

    </Grid>
</Window>
