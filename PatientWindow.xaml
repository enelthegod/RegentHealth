<Window x:Class="RegentHealth.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegentHealth - Appointments"
        Height="568"
        Width="723">

    <Grid>

        <!-- Allows content to stay inside window -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <!-- Main centered container -->
            <StackPanel HorizontalAlignment="Center"
                        Width="500"
                        Margin="20">

                <TextBlock Text="My Appointments"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Appointment creation -->
                <StackPanel>

                    <TextBlock Text="Select Date:"/>
                    <DatePicker x:Name="AppointmentDatePicker"
                                Margin="0,5,0,10"/>

                    <TextBlock Text="Appointment Type:"/>
                    <ComboBox x:Name="AppointmentTypeComboBox"
                              Height="30"
                              Margin="0,5,0,10"/>

                    <TextBlock Text="Time:"/>
                    <ComboBox x:Name="TimeSlotComboBox"
                              Height="30"
                              Margin="0,5,0,15"/>

                    <Button Content="Create Appointment"
                            Width="200"
                            Height="35"
                            HorizontalAlignment="Center"
                            Click="CreateAppointment_Click"/>
                </StackPanel>

                <!-- List -->
                <ListBox x:Name="AppointmentsListBox"
                         Height="180"
                         Margin="0,20,0,10"/>

                <!-- Action buttons -->
                <StackPanel HorizontalAlignment="Center">

                    <Button Content="Cancel Appointment"
                            Width="220"
                            Height="35"
                            Margin="0,5"
                            Click="CancelAppointment_Click"/>

                    <Button Content="Back"
                            Width="150"
                            Height="30"
                            Margin="0,5"
                            Click="Back_Click"/>

                    <Button Content="Refresh"
                            Width="150"
                            Height="30"
                            Margin="0,5"
                            Click="Refresh_Click"/>

                </StackPanel>

            </StackPanel>

        </ScrollViewer>

    </Grid>
</Window>
