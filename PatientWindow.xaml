<Window x:Class="RegentHealth.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegentHealth - Appointments"
        Height="450"
        Width="700">

    <Grid Margin="10">

        <StackPanel>

            <TextBlock Text="My Appointments"
                       FontSize="22"
                       Margin="0,0,0,10"/>

            <ListBox x:Name="AppointmentsListBox"
                     Height="300"/>

            <Button Content="Refresh"
                    Width="120"
                    Margin="0,10,0,0"
                    Click="Refresh_Click"/>

        </StackPanel>

    </Grid>
</Window>
