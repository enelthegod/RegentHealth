<Window x:Class="RegentHealth.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegentHealth - Appointments"
        Height="600"
        Width="750"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Grid.Row="0"
                   Text="My Appointments"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- CREATE APPOINTMENT PANEL -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    Width="320">

            <TextBlock Text="Select Date:" Margin="0,5"/>
            <DatePicker x:Name="AppointmentDatePicker"/>

            <TextBlock Text="Appointment Type:" Margin="0,10,0,5"/>
            <ComboBox x:Name="AppointmentTypeComboBox"
                      Height="30"/>

            <TextBlock Text="Time:" Margin="0,10,0,5"/>
            <ComboBox x:Name="TimeSlotComboBox"
                      Height="30"/>

            <!-- 🔥 HORIZONTAL BUTTON ROW -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,10">

                <Button Content="Create Appointment"
                        Width="160"
                        Height="35"
                        Margin="5,0"
                        Click="CreateAppointment_Click"/>

                <Button Content="Refresh"
                        Width="120"
                        Height="35"
                        Margin="5,0"
                        Click="Refresh_Click"/>
            </StackPanel>

        </StackPanel>

        <!-- APPOINTMENTS LIST -->
        <ListBox Grid.Row="2"
                 x:Name="AppointmentsListBox"
                 Margin="0,10"
                 HorizontalAlignment="Stretch"/>

        <!-- ACTION BUTTONS -->
        <StackPanel Grid.Row="3"
                    HorizontalAlignment="Center"
                    Margin="0,10">

            <Button Content="Cancel Appointment"
                    Width="220"
                    Height="35"
                    Margin="0,5"
                    Click="CancelAppointment_Click"/>

            <Separator Margin="0,10"/>

            <Button Content="Back"
                    Width="150"
                    Height="30"
                    Margin="0,5"
                    Click="Back_Click"/>
        </StackPanel>

    </Grid>
</Window>

