<Window x:Class="RegentHealth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegentHealth - Login" Height="434" Width="630"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">


    <Grid Background="#f0f0f0" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            
            <TextBlock Text="Welcome" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Login -->
            <TextBlock Text="Login:" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox" Height="30" Margin="0,0,0,15"/>

            <!-- Password -->
            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20"/>

            <!-- Login Button -->
            <Button Height="35" Click="LoginButton_Click" Background="#007ACC" Foreground="White"
                    FontWeight="Bold">Login</Button>

        </StackPanel>

    </Grid>
</Window>